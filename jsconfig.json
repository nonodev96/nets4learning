{
  "compilerOptions": {
    "module": "CommonJS",
    "downlevelIteration": true,
    "checkJs": true, 
    "allowJs": true, 
    "maxNodeModuleJsDepth": 2,
    "jsx": "preserve",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@*": [
        "../*"
      ],
      "@/*": [
        "./*"
      ],
      "@assets/*": [
        "./assets/*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@context/*": [
        "./context/*"
      ],
      "@core/*": [
        "./core/*"
      ],
      "@hooks/*": [
        "./hooks/*"
      ],
      "@pages/*": [
        "./pages/*"
      ],
      "@shared/*": [
        "./shared/*"
      ],
      "@styles/*": [
        "./styles/*"
      ],
      "@utils/*": [
        "./utils/*"
      ]
    }
  },
  "include": [
    "src",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules", 
    "**/node_modules/*"
  ]
}